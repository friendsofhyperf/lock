{
    "name": "friendsofhyperf/lock",
    "description": "Lock component for hyperf.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "php": ">=7.3",
        "hyperf/config": "^2.2",
        "hyperf/utils": "^2.2",
        "nesbot/carbon": "^2.44"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/cache": "^2.2",
        "hyperf/db-connection": "^2.2",
        "hyperf/di": "^2.2",
        "hyperf/framework": "^2.2",
        "hyperf/ide-helper": "^2.2",
        "hyperf/redis": "^2.2",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\Lock\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\Lock\\ConfigProvider"
        }
    },
    "suggest": {
        "hyperf/cache": "Require this component for driver 'file'.",
        "hyperf/db-connection": "Require this component for driver 'database'.",
        "hyperf/redis": "Require this component for driver 'redis'."
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src"
    }
}